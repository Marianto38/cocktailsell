<div id="<%= dom_id product %>">
  <div class="card mb-3 container-03 p-2">
    <div class="row g-0">
      <div class="col-md-4  d-flex align-items-center justify-content-center" >
          <% if product.photo.attached?  %>
          <%= cl_image_tag product.photo.key,  height: 100, width: 100, crop: :fill %>
          <% else %>
        <img src="assets/favicon.png" class="img-fluid rounded-start" alt="...">
         <% end %>
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= link_to product_path(product), class: "text-decoration-none fw-bold text-info" do %>
          <h5 class="mt-3"><%= (product.name).capitalize %></h5>
         <% end %>
         <span class="badge rounded-pill bg-dark"><%= product.category %></span>
            <span class="badge rounded-pill bg-dark"><%= product.subcategory %></span>
          <p class="card-text fs-6 pt-5 d-flex justify-content-end me-5"><%= number_to_currency(product.price) %></p>
          <!-- <p class="card-text fs-6 mt-3"><% product.ingredients.all.each do |ingredient| %>
          <%= ingredient.name %> </p>
          <% end %></p> -->
        </div>
      </div>
    </div>
  </div>
</div>
