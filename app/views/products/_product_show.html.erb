<style>
  .scroll-card {
    overflow-y: scroll;
    max-height: 200px;
  }
  .img-card-1 {
position: static;

  }
  .font-recipe {
    font-size: 14px;
  }
  .r-img {
     border-radius: 4% 0% 0% 4%;
  }
  .bg-ing {
    background-image: url("https://i.pinimg.com/564x/cd/16/e0/cd16e0749746ea613394adb9c5aa3164.jpg");
    width: 350px;
    box-shadow: 10px 5px 5px rgb(251, 250, 250);
             border-radius: 50px;
  }


</style>


<div class="container">
  <section class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card mb-3 container-03">
        <div class="row g-0 rounded-4 ">
          <div class="col-lg-5  d-flex align-items-center justify-content-center img-card-1" >
              <% if @product.photo.attached?  %>
              <%= cl_image_tag @product.photo.key,  height: 400, width: 300, crop: :fill, class:"r-img" %>
              <% else %>
            <img src="assets/favicon.png" class="img-fluid rounded-start" alt="...">
            <% end %>
          </div>
          <div class="col-lg-7 ">
            <div class="card-body">
              <h5 class="card-title"><%= link_to product_path(@product), class: "text-decoration-none fw-bold text-info" do %>
              <h5 class="mt-3 fs-1"><%= (@product.name).capitalize %></h5>
            <% end %>
            <span class="badge rounded-pill bg-dark"><%= @product.category %></span>
                <span class="badge rounded-pill bg-dark"><%= @product.subcategory %></span>
                <p class="card-text fs-5  d-flex justify-content-end me-5"><%= number_to_currency(@product.price) %></p>
                <div class="scroll-card mt-0 pt-0 font-recipe">
                  <tr>
                    <td> <h4 class="text-light fs-5">Recipe:</h4>
                      <td> <%= simple_format(@product.recipe) %> </td>
                      <td> <h4 class="text-light fs-5">Ingredientes:</h4>
                        <% @product.ingredients.all.each do |p|%>
                        <ul class="list-group">
                          <li class="list-group-item bg-transparent text-light border-0"><i class="fa-solid fa-martini-glass-citrus"></i> <span class="mx-3"><%= p.name %></span></li>
                        </ul>
                        <% end %>
                      </td>
                  </tr>
                </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
